@カメラ座標
--track0:x,-1000,1000,0,0.1
--track1:y,-1000,1000,0,0.1
--track2:z,-1000,1000,0,0.1

--------------------------------------------------------------
-- 変数
--------------------------------------------------------------
cam = obj.getoption("camera_param")
--座標
cx = cam.x
cy = cam.y
cz = cam.z

--------------------------------------------------------------
-- カメラ座標
--------------------------------------------------------------

cam.x = cx + obj.track0
cam.y = cy + obj.track1
cam.z = cz + obj.track2

obj.setoption("camera_param", cam)